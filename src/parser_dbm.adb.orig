-----------------------------------------------------------------------------
--  EXECUTE
--
-- Syntax: dbm.execute( Q, C );
-- Source: APQ.Execute
-----------------------------------------------------------------------------

procedure ParseDBMExecute is
  queryId : identifier;
  query : resPtr;
  connectId : identifier;
  connection : resPtr;
begin
  expect( dbm_execute_t );
  ParseFirstInOutParameter( queryId, dbm_query_t );
  ParseLastInOutParameter( dbm_execute_t, connectId, dbm_connection_t );
  if isExecutingCommand then
     begin
       findConnection( connectId, connection );
       findConnection( queryId, query );
       Execute( query.PG_Q, connection.PG_C );
     exception when not_connected =>
       err( "not connected" );
     when abort_state =>
       err( "in abort state" );
     when sql_error =>
       err( Error_Message( query.PG_Q ) );
     when others =>
       err( "exception raised" );
     end;
  end if;
end ParseDBMExecute;

